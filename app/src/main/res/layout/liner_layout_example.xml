<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geração de números ímpares - Linear layout" />

    <Button
        android:id="@+id/button1line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botão 1" />
    <Button
        android:id="@+id/button2line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botão 2" />
    <Button
        android:id="@+id/button3line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botão 3" />
    <Button
        android:id="@+id/button4line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botão 4" />

</LinearLayout>
