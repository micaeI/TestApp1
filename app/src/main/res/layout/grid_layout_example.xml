<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="4"
    android:padding="16dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button1grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botão 1"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:id="@+id/button2grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 2"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:id="@+id/button3grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 3"
        android:layout_row="0"
        android:layout_column="2" />

    <Button
        android:id="@+id/button4grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 4"
        android:layout_row="1"
        android:layout_column="3" />

    <Button
        android:id="@+id/button5grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 5"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/button6grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botão 6"
        android:layout_row="1"
        android:layout_column="2" />

</GridLayout>
